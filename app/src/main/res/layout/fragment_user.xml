<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="nam.tran.architechture.view.user.viewmodel.UserViewModel" />
        <import type="nam.tran.domain.entities.UserEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nam.tran.architechture.view.user.UserFragment">

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_contain"
            app:visibleView="@{viewModel.status}"
            app:constraint_referenced_ids="iv_avarta,tv_name"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_avarta"
            android:layout_width="@dimen/positive_200dp"
            android:layout_height="@dimen/positive_200dp"
            android:layout_marginTop="@dimen/positive_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadAvarta="@{viewModel.mUserInfo}"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14sp"
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/positive_10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_avarta"
            app:layout_constraintEnd_toEndOf="@+id/iv_avarta"
            app:layout_constraintStart_toStartOf="@+id/iv_avarta"
            android:text="@{viewModel.mUserInfo.login}"
            tools:text="Nam Tran" />

        <include
            layout="@layout/loading_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:state="@{viewModel.status}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>