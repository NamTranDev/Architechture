<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view"
            type="nam.tran.architechture.view.main.MainActivity"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context="nam.tran.architechture.view.main.MainActivity">

        <Button
            android:id="@+id/bt_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> view.onActivityClick()}"
            android:text="Activity"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/bt_fragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/bt_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> view.onFragmentClick()}"
            android:layout_marginTop="10dp"
            android:text="Fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_activity" />

    </android.support.constraint.ConstraintLayout>

</layout>
