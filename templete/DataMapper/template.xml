<!-- A template for a mvvm fragment -->
<template
	format="1"
	revision="1"
	name="Data Mapper"
	minApi="11"
    minBuildApi="17"
	description="Create a new data mapper for Clean Architechture">

	<category value="NamTran" />
    <formfactor value="Mobile" />

	<parameter
		id="DataMapperName"
		name="Data mapper name"
		type="String"
		constraints="class|unique|nonempty"
		suggest=""
		help="The name of the data mapper class to create" />

	<parameter
		id="datafrom"
		name="Data mapper from"
		type="String"
		constraints="class|unique|nonempty"/>

	<parameter
		id="datato"
		name="Data mapper to"
		type="String"
		constraints="class|unique|nonempty"/>

    <parameter 
        id="isDomain"
        name="isDomain mapper data"
        type="boolean"
        default="true"/>

    <parameter
    	id="isReverse"
    	name="isReverse mapper data"
    	type="boolean"
    	default="false"/>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />
	
</template>
